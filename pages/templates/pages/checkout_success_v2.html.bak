{% extends 'pages/base.html' %}
{% load static %}

{% block title %}TNK Coffee - Đặt Hàng Thành Công{% endblock %}

{% block content %}
<!-- Page Header Start -->
<div class="container-fluid bg-dark bg-img p-5 mb-5">
    <div class="row">
        <div class="col-12 text-center">
            <h1 class="display-4 text-uppercase text-white">Thành Công</h1>
            <a href="{% url 'home' %}">Trang Chủ</a>
            <i class="far fa-square text-primary px-2"></i>
            <a href="">Đặt Hàng</a>
        </div>
    </div>
</div>
<!-- Page Header End -->

<div class="container-fluid pt-5">
    <div class="container text-center">
        <div class="alert alert-success d-inline-block p-5 shadow-sm" role="alert" style="border-radius: 20px;">
            <i class="bi bi-check-circle-fill text-success display-1 mb-3 d-block"></i>
            <h2 class="alert-heading text-uppercase font-weight-bold mb-3">Đơn Hàng Đã Được Gửi!</h2>
            <p class="lead mb-4">Cảm ơn bạn đã đặt hàng tại TNK Coffee.</p>
            <div class="bg-white p-3 rounded mb-3 d-inline-block border border-success">
                <span class="h5 m-0 text-dark">Mã đơn hàng: <strong class="text-success fs-3">#{{ order.id
                        }}</strong></span>
            </div>
            <p class="mb-0">Chúng tôi sẽ sớm liên hệ với bạn để xác nhận.</p>
        </div>
        <div class="mt-4">
            <a href="{% url 'menu' %}" class="btn btn-primary border-inner py-3 px-5 rounded-pill">Tiếp Tục Mua Sắm</a>
        </div>
    </div>
</div>
{% endblock %}